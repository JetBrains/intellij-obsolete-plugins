  if (openbox2 != null && !openbox2) {
    open += "close_box(document.getElementById('box2'));"
  }
  if (openbox3 != null && !openbox3) {
    open += "close_box(document.getElementById('box3'));"
  }
  if (openbox4 != null && !openbox4) {
