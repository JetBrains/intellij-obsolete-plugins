<idea-plugin>

  <dependencies>
    <plugin id="com.intellij.hibernate"/>
  </dependencies>

  <extensions defaultExtensionNs="com.intellij">
    <persistence.packagesProvider implementation="com.intellij.groovy.grails.hibernate.GormSessionFactoryContributor"/>
  </extensions>

  <extensions defaultExtensionNs="org.intellij.grails">
    <facetProvider implementation="com.intellij.groovy.grails.hibernate.GormHibernateFacetProvider"/>
  </extensions>
</idea-plugin>
