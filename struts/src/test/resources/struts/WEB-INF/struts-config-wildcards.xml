<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
        "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>

    <action-mappings>
      <action path="/*List" type="com.xyz.actions.{1}Action" parameter="doList"
               name="{1}Form"
               validate="true"
               scope="request">
           <forward name="success" path="page.{1}.list" redirect="false"/>
       </action>
    </action-mappings>
</struts-config>