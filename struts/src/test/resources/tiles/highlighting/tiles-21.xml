<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE tiles-definitions PUBLIC
    "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
    "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>
  <definition name="simpleDefinition" templateType="whateverIWant"/>

  <definition>
    <put-list-attribute name="putlist">
      <add-attribute>
        <definition name="addAttributeDefinition"/>
      </add-attribute>
    </put-list-attribute>
  </definition>
  
  <definition name="anotherDefinition">
    <put-list-attribute name="whatever"
                        inherit="<error descr="Cannot resolve symbol 'INVALID_VALUE'">INVALID_VALUE</error>"
                        cascade="<error descr="Cannot resolve symbol 'INVALID_VALUE'">INVALID_VALUE</error>">
      <item link="itemLink" value="itemValue"/>
    </put-list-attribute>
  </definition>
</tiles-definitions>