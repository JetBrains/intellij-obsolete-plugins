<idea-plugin package="com.intellij.guice">
  <id>com.intellij.guice</id>
  <name>Guice</name>
  <category>JVM Frameworks</category>

  <description><![CDATA[
  Adds support for <a href="https://github.com/google/guice">Guice</a>, Google's dependency injection framework.
  <ul>
  <li>Templates for creating new Guice files</li>
  <li>Coding assistance specific to Guice constructs: code completion, inspections, intention actions, and much more
  </ul>
  <p>Originally developed by Sixth and Red River Software.</p>
  ]]></description>

  <vendor>JetBrains</vendor>

  <dependencies>
    <plugin id="com.intellij.properties"/>
    <plugin id="com.intellij.java"/>
    <plugin id="com.intellij.modules.ultimate"/>
    <module name="intellij.properties.backend"/>
    <module name="intellij.properties.backend.psi"/>
  </dependencies>

  <resource-bundle>messages.GuiceBundle</resource-bundle>

  <actions>
    <group id="GuiceActionGroup" class="com.intellij.guice.actions.GuiceActionGroup" popup="true"
           icon="com.intellij.guice.GuiceIcons.GoogleSmall">
      <action id="NewGuiceModule" class="com.intellij.guice.actions.NewGuiceModuleAction"/>
      <action id="NewGuiceProvider" class="com.intellij.guice.actions.NewGuiceProviderAction"/>
      <action id="NewGuiceBindingAnnotation" class="com.intellij.guice.actions.NewGuiceBindingAnnotationAction"/>
      <action id="NewGuiceScopeAnnotation" class="com.intellij.guice.actions.NewGuiceScopeAnnotationAction"/>
      <action id="NewGuiceMethodInterceptor" class="com.intellij.guice.actions.NewGuiceMethodInterceptorAction"/>
      <add-to-group group-id="NewGroup" anchor="last"/>
    </group>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <semContributor implementation="com.intellij.guice.model.jam.GuiceSemContributor"/>
    <fileTemplateGroup implementation="com.intellij.guice.actions.GuiceTemplatesFactory"/>
    <codeInsight.implicitSubclassProvider implementation="com.intellij.guice.inspections.GuiceImplicitSubclassProvider"/>

    <codeInsight.lineMarkerProvider language="JAVA" order="last" implementationClass="com.intellij.guice.model.GuiceBindingClassAnnotator"/>
    <codeInsight.lineMarkerProvider language="JAVA" order="last"
                                    implementationClass="com.intellij.guice.model.GuiceInjectionsClassAnnotator"/>
    <localInspection language="JAVA" shortName="SessionScopedInjectsRequestScoped" bundle="messages.GuiceBundle"
                     key="session.scoped.injects.request.scoped.display.name" groupKey="group.guice.inspections.name" enabledByDefault="true"
                     level="WARNING" implementationClass="com.intellij.guice.inspections.SessionScopedInjectsRequestScopedInspection"/>
    <localInspection language="JAVA" shortName="SingletonInjectsScoped" bundle="messages.GuiceBundle"
                     key="singleton.injects.scoped.display.name" groupKey="group.guice.inspections.name" enabledByDefault="true" level="WARNING"
                     implementationClass="com.intellij.guice.inspections.SingletonInjectsScopedInspection"/>
    <localInspection language="JAVA" shortName="InvalidImplementedBy" bundle="messages.GuiceBundle"
                     key="invalid.implemented.by.display.name" groupKey="group.guice.inspections.name" enabledByDefault="true" level="WARNING"
                     implementationClass="com.intellij.guice.inspections.InvalidImplementedByInspection"/>
    <localInspection language="JAVA" shortName="InvalidProvidedBy" bundle="messages.GuiceBundle"
                     key="invalid.provided.by.display.name"
                     groupKey="group.guice.inspections.name" enabledByDefault="true" level="WARNING"
                     implementationClass="com.intellij.guice.inspections.InvalidProvidedByInspection"/>
    <localInspection language="JAVA" shortName="UninstantiableImplementedByClass" bundle="messages.GuiceBundle"
                     key="uninstantiable.implemented.by.class.display.name" groupKey="group.guice.inspections.name" enabledByDefault="true"
                     level="WARNING" implementationClass="com.intellij.guice.inspections.UninstantiableImplementedByClassInspection"/>
    <localInspection language="JAVA" shortName="UninstantiableBinding" bundle="messages.GuiceBundle"
                     key="uninstantiable.binding.display.name" groupKey="group.guice.inspections.name" enabledByDefault="true" level="WARNING"
                     implementationClass="com.intellij.guice.inspections.UninstantiableBindingInspection"/>
    <localInspection language="JAVA" shortName="UninstantiableProvidedByClass" bundle="messages.GuiceBundle"
                     key="uninstantiable.provided.by.class.display.name" groupKey="group.guice.inspections.name" enabledByDefault="true"
                     level="WARNING" implementationClass="com.intellij.guice.inspections.UninstantiableProvidedByClassInspection"/>
    <localInspection language="JAVA" shortName="PointlessBinding" bundle="messages.GuiceBundle"
                     key="pointless.binding.display.name"
                     groupKey="group.guice.inspections.name" enabledByDefault="true" level="WARNING"
                     implementationClass="com.intellij.guice.inspections.PointlessBindingInspection"/>
    <localInspection language="JAVA" shortName="ConflictingAnnotations" bundle="messages.GuiceBundle"
                     key="conflicting.annotations.display.name" groupKey="group.guice.inspections.name" enabledByDefault="true" level="WARNING"
                     implementationClass="com.intellij.guice.inspections.ConflictingAnnotationsInspection"/>
    <localInspection language="JAVA" shortName="RedundantToBinding" bundle="messages.GuiceBundle"
                     key="redundant.to.binding.display.name"
                     groupKey="group.guice.inspections.name" enabledByDefault="true" level="WARNING"
                     implementationClass="com.intellij.guice.inspections.RedundantToBindingInspection"/>
    <localInspection language="JAVA" shortName="RedundantToProviderBinding" bundle="messages.GuiceBundle"
                     key="redundant.to.provider.binding.display.name" groupKey="group.guice.inspections.name" enabledByDefault="true" level="WARNING"
                     implementationClass="com.intellij.guice.inspections.RedundantToProviderBindingInspection"/>
    <localInspection language="JAVA" shortName="RedundantScopeBinding" bundle="messages.GuiceBundle"
                     key="redundant.scope.binding.display.name" groupKey="group.guice.inspections.name" enabledByDefault="true" level="WARNING"
                     implementationClass="com.intellij.guice.inspections.RedundantScopeBindingInspection"/>
    <localInspection language="JAVA" shortName="MultipleInjectedConstructorsForClass" bundle="messages.GuiceBundle"
                     key="multiple.injected.constructors.for.class.display.name" groupKey="group.guice.inspections.name" enabledByDefault="true"
                     level="WARNING" implementationClass="com.intellij.guice.inspections.MultipleInjectedConstructorsForClassInspection"/>
    <localInspection language="JAVA" shortName="MultipleBindingAnnotations" bundle="messages.GuiceBundle"
                     key="multiple.binding.annotations.display.name" groupKey="group.guice.inspections.name" enabledByDefault="true" level="WARNING"
                     implementationClass="com.intellij.guice.inspections.MultipleBindingAnnotationsInspection"/>
    <localInspection language="JAVA" shortName="InvalidRequestParameters" bundle="messages.GuiceBundle"
                     key="invalid.request.parameters.display.name" groupKey="group.guice.inspections.name" enabledByDefault="true" level="WARNING"
                     implementationClass="com.intellij.guice.inspections.InvalidRequestParametersInspection"/>
    <localInspection language="JAVA" shortName="BindingAnnotationWithoutInject" bundle="messages.GuiceBundle"
                     key="binding.annotation.without.inject.display.name" groupKey="group.guice.inspections.name" enabledByDefault="true"
                     level="WARNING" implementationClass="com.intellij.guice.inspections.BindingAnnotationWithoutInjectInspection"/>
    <localInspection language="JAVA" shortName="InterceptionAnnotationWithoutRuntimeRetention" bundle="messages.GuiceBundle"
                     key="interception.annotation.without.runtime.retention.display.name" groupKey="group.guice.inspections.name"
                     enabledByDefault="true" level="WARNING"
                     implementationClass="com.intellij.guice.inspections.InterceptionAnnotationWithoutRuntimeRetentionInspection"/>
    <localInspection language="JAVA" shortName="UnnecessaryStaticInjection" bundle="messages.GuiceBundle"
                     key="unnecessary.static.injection.display.name" groupKey="group.guice.inspections.name" enabledByDefault="true" level="WARNING"
                     implementationClass="com.intellij.guice.inspections.UnnecessaryStaticInjectionInspection"/>

    <intentionAction>
      <language>JAVA</language>
      <bundleName>messages.GuiceBundle</bundleName>
      <categoryKey>guice.intentions</categoryKey>
      <className>com.intellij.guice.intentions.ToggleInjectionRequiredIntention</className>
    </intentionAction>

    <intentionAction>
      <language>JAVA</language>
      <bundleName>messages.GuiceBundle</bundleName>
      <categoryKey>guice.intentions</categoryKey>
      <className>com.intellij.guice.intentions.MoveBindingScopeToClassIntention</className>
    </intentionAction>

    <intentionAction>
      <language>JAVA</language>
      <bundleName>messages.GuiceBundle</bundleName>
      <categoryKey>guice.intentions</categoryKey>
      <className>com.intellij.guice.intentions.MoveBindingToClassIntention</className>
    </intentionAction>

    <intentionAction>
      <language>JAVA</language>
      <bundleName>messages.GuiceBundle</bundleName>
      <categoryKey>guice.intentions</categoryKey>
      <className>com.intellij.guice.intentions.MoveProviderBindingToClassIntention</className>
    </intentionAction>

    <implicitUsageProvider implementation="com.intellij.guice.GuiceImplicitUsageProvider"/>
  </extensions>
</idea-plugin>
